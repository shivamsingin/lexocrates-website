# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lexocrates_admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=15

# CSRF Configuration
CSRF_SECRET=your-super-secret-csrf-key-change-this-in-production

# MFA Configuration
MFA_ISSUER=Lexocrates
MFA_WINDOW=2

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000
REFRESH_TOKEN_MAX_AGE=604800000

# CAPTCHA Configuration (Google reCAPTCHA v2)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Admin Default Account
ADMIN_EMAIL=admin@lexocrates.com
ADMIN_PASSWORD=admin123

# Email Configuration (for password reset, contact forms, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@lexocrates.com
CONTACT_EMAIL=contact@lexocrates.com

# Redis Configuration (for session storage in production)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Headers Configuration
CSP_REPORT_URI=https://your-domain.com/csp-report
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# HTTPS Configuration (Optional - for direct HTTPS server)
# Note: In production, it's recommended to use a reverse proxy (nginx, CloudFlare) for HTTPS termination
# SSL_CERT_PATH=/path/to/your/certificate.crt
# SSL_KEY_PATH=/path/to/your/private.key
# HTTPS_PORT=443

# File Security & Encryption Settings
ENCRYPTION_MASTER_KEY=your_encryption_master_key_here_256_bits
UPLOAD_DIRECTORY=uploads
ENCRYPTED_DIRECTORY=encrypted
TEMP_DIRECTORY=temp
MAX_FILE_SIZE=52428800
MAX_FILES_PER_UPLOAD=10
FILE_SCAN_TIMEOUT=30000
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.txt,.jpg,.jpeg,.png,.zip
